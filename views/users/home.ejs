    <style>
        .scrolling-img {
            position: relative;
            overflow: hidden;
            width: 100%; /* Full-width container */
        }
    
        .scrolling-img-wrapper {
            display: flex;
            flex-direction: column;
            animation: scrollUp 60s linear infinite; 
        }
    
        .scrolling-img img {
            width: 100%; /* Ensure images span the container width */
            height: auto; /* Maintain aspect ratio */
        }
    
        /* Smoky effect on the top border of the scrolling image with gradual fade */
        .scrolling-img::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 50px; /* Control the height of the smoky effect */
            background: linear-gradient(to bottom, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0)); /* Fading from white to transparent */
            z-index: 2; /* Ensure it is above the image */
        }
    
        @keyframes scrollUp {
            0% {
                transform: translateY(0); /* Start position */
            }
            100% {
                transform: translateY(-100%); /* Move up completely */
            }
        }

        /* Media query for mobile screens */
        @media (max-width: 767px) {
            #dynamicText {
                font-size: 1.5rem;
            }
        }
    </style>
    

